<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--makes it so a user cant select 2 options at the same time -->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>


    <!-- ActionButton Theme. -->
    <style name="ActionButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/action_button_drawable</item>
        <item name="android:layout_height">@dimen/actionButtonHeight</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>

    <!-- OptionButton Theme. -->
    <style name="OptionButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/option_button_drawable</item>
        <item name="android:layout_height">@dimen/actionButtonHeight</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>

    </style>

</resources>
